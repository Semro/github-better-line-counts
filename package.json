{
  "name": "GitHub: Better Line Counts",
  "description": "Remove generated files from GitHub line counts",
  "private": true,
  "version": "1.6.3",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile": "vue-tsc --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "prepare": "simple-git-hooks",
    "postinstall": "wxt prepare",
    "submit": "env-cmd -f ./.env.submit ./scripts/submit.sh",
    "submit:dry": "pnpm -s submit --dry-run"
  },
  "dependencies": {
    "@vueuse/core": "^9",
    "@webext-core/messaging": "^1.4.0",
    "@webext-core/proxy-service": "^1.2.0",
    "@webext-core/storage": "^1.1.2",
    "async-mutex": "^0.4.0",
    "daisyui": "^3.7.7",
    "fast-deep-equal": "^3.1.3",
    "minimatch": "^9.0.3",
    "ofetch": "^1.3.3",
    "vue-query": "^1.26.0"
  },
  "devDependencies": {
    "@aklinker1/generate-changelog": "^1.1.2",
    "@iconify/json": "^2.2.119",
    "@types/jsdom": "^21.1.3",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitest/coverage-v8": "^0.34.5",
    "autoprefixer": "^10.4.16",
    "env-cmd": "^10.1.0",
    "fast-glob": "^3.3.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "publish-browser-extension": "^1.4.1",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.17.0",
    "vitest": "^0.34.5",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.13",
    "wxt": "^0.7.1",
    "zip-a-folder": "^3.1.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
